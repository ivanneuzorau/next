{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false
  },
  "exclude": [
    "jest.config.ts",
    "jest.config.cts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx",
    "src/web-component/web-component-loader.tsx",
    "src/web-component/index.ts"
  ],
  "include": ["src/web-component/standalone.tsx", "src/**/*.ts", "src/**/*.tsx"]
}

