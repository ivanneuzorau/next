{
  "name": "shared-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/shared-ui/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project shared-ui --web",
  "targets": {
    "build-web-component": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "project": "packages/shared-ui/package.json",
        "entryFile": "packages/shared-ui/src/web-component/standalone.tsx",
        "outputPath": "dist/packages/shared-ui/web-component",
        "tsConfig": "packages/shared-ui/tsconfig.standalone.json",
        "rollupConfig": "packages/shared-ui/rollup.standalone.config.cjs",
        "compiler": "babel",
        "skipTypeCheck": true,
        "outputFileName": "sk8-pipelines.js"
      }
    }
  }
}
